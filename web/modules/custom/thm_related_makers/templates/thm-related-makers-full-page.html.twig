          <span class="accordion__arrow">
              <span class="accordion__arrow-half"></span>
              <span class="accordion__arrow-half"></span>
          </span>
      </button>
      <div class="collapse show accordion__body" id="related-by-employment">
          <div class="card">
            {{ drupal_view('related_makers_employment_', 'block_1', data.employment) }}
          </div>
      </div>
  </div>

  {# Related by Education #}
  <div class="accordion">
      <button class="accordion__panel" type="button" data-toggle="collapse" data-target="#related-by-education" aria-expanded="true" aria-controls="related-by-education">
          Related by Education ({{ data.education }})
          <span class="accordion__arrow">
              <span class="accordion__arrow-half"></span>
              <span class="accordion__arrow-half"></span>
          </span>
      </button>
      <div class="collapse show accordion__body" id="related-by-education">
          <div class="card">
            {{ drupal_view('related_makers_by_education', 'block_1', data.education) }}
          </div>
      </div>
  </div>

  {# Related by Occupation #}
  <div class="accordion">
      <button class="accordion__panel" type="button" data-toggle="collapse" data-target="#related-by-occupation" aria-expanded="true" aria-controls="related-by-occupation">
