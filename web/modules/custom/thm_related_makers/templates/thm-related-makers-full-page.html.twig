<div class="related-makers">

  {# Related by Birthplace #}
  <div class="accordion">
      <button class="accordion__panel" type="button" data-toggle="collapse" data-target="#related-by-birthplace" aria-expanded="true" aria-controls="related-by-birthplace">
          Related by Birthplace ({{ data.birthplace_str }})
          <span class="accordion__arrow">
              <span class="accordion__arrow-half"></span>
              <span class="accordion__arrow-half"></span>
          </span>
      </button>
      <div class="collapse show accordion__body" id="related-by-birthplace">
          <div class="card">
            {{ drupal_view('related_makers_by_birthplace', 'block_1', data.birth_place) }}
          </div>
      </div>
  </div>

  {# Related by Employment #}
  <div class="accordion">
      <button class="accordion__panel" type="button" data-toggle="collapse" data-target="#related-by-employment" aria-expanded="true" aria-controls="related-by-employment">
