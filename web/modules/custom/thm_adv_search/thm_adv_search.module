<?php

/**
 * @file
 * Contains thm_adv_search.module.
 */

use Drupal\Core\Routing\RouteMatchInterface as RMI;
use Solarium\Core\Query\QueryInterface as SolrQueryInterface;
use Drupal\search_api\Query\QueryInterface as DrupalQueryInterface;

/**
 * Implements hook_help().
 */
function thm_adv_search_help($route_name, RMI $route_match) {
  switch ($route_name) {
    // Main module help for the thm_adv_search module.
    case 'help.page.thm_adv_search':
      $output = '';
      $output .= '<h3>' . t('About') . '</h3>';
      $output .= '<p>' . t('custom modifications supporting search functionality') . '</p>';
      return $output;

    default:
  }
}

function _applySearchExclude(SolrQueryInterface $solrQuery, DrupalQueryInterface $query) {
  $config         = \Drupal::config('thm_adv_search.settings');
  $bundlesConfig  = $config->get('bundles');
  $typesToExclude = [];

  foreach ($bundlesConfig as $k => $v) {
    if ($v) {
      $typesToExclude[] = $k;
    }
  }

  if (!empty($typesToExclude)) {
    $solrQuery->createFilterQuery('ts_title')->getQuery('+ts_title:"Na\'im Akbar"');
    drupal_set_message('here.');
  }
}

/**
 * Implements hook_search_api_solr_query_alter().
 *
 * @param SolrQueryInterface $solarium_query
 * @param DrupalQueryInterface $query
 */
function thm_adv_search_search_api_solr_query_alter(SolrQueryInterface $solarium_query, DrupalQueryInterface $query) {
  if ($query->hasTag('views_advanced_search')) {
    _applySearchExclude($solarium_query, $query);
  }
}
